#include<iostream>
using namespace std;
int main()
{
int n,a[100];
int c=0;
int mid=0;
cout<<"Enter The Size of Array : ";
cin>>n;
cout<<"\nEnter The Element : ";
for(int i=0;i<n;i++)
{


cin>>a[i];


}
cout<<"\n+++Binary Search++++++++++";
int q;
cout<<"\nEnter The Element Which You Want To Search :";
cin>>q;
int b=0;
int e=n-1;

while(b<=e)

{
mid=int((b+e)/2);
   if(q>a[mid])
   {

     b=mid+1;

        
    }
   else
   {

   if(q<a[mid])
   {

   e=mid-1;

   }

   else{

     cout<<"Element Found At Position : "<<mid+1;
     break;
   }



  }
}

}


















